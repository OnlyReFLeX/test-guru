<h1><%= t('.all_badges') %></h2>
<%= link_to t('.new_badge'), new_admin_badge_path, class: 'btn btn-primary' %>
<table class="table table-bordered mt-2">
  <thead>
    <tr>
      <th><%= t('.image') %></th>
      <th><%= t('.name') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @badges %>
  </tbody>
</table>
