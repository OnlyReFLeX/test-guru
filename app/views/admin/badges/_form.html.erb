<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :image %>
    <%= form.text_field :image %>
  </p>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :rule %>
    <%= form.select :rule, options_for_select([
                                                ['После прохождения всех тестов категории', 1],
                                                ['После прохождения теста с первой попытки', 2],
                                                ['После прохождения теста определенного уровня', 3]
                                              ])  %>
  </p>

  <p>
    <%= form.label :rule_parameter %>
    <%= form.text_field :rule_parameter %>
  </p>

  <p><%= form.submit %></p>
<% end %>
