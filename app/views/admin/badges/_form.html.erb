<div class="row justify-content-center">
  <div class="col col-md-5">
    <%= render 'shared/errors', resource: @badge %>

    <%= form_with model: [:admin, @badge], local: true do |form| %>
      <div class="form-group">
      <p>
        <%= form.label :image %>
        <%= form.text_field :image, class: 'form-control'  %>
      </p>

      <p>
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control'  %>
      </p>

      <p>
        <%= form.label :rule %>
        <%= form.select :rule, options_for_select([
                                                    ['После прохождения всех тестов категории', 1],
                                                    ['После прохождения теста с первой попытки', 2],
                                                    ['После прохождения теста определенного уровня', 3]
                                                  ] , selected: @badge.rule), { prompt: true }, { class: 'form-control' } %>
      </p>

      <p>
        <%= form.label :rule_parameter %>
        <%= form.text_field :rule_parameter, class: 'form-control'  %>
      </p>

      <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= link_to t('back'), admin_tests_path %>
  </div>
</div>
