<div class="row justify-content-center">
  <div class="col col-md-4">
    <h2><%= test_header(test) %></h2>

    <%= render 'shared/errors', resource: test %>

    <%= form_with model: [:admin, test], local: true do |form| %>
      <div class="form-group">
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </p>

        <p>
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all, :id, :title, { prompt: true }, { class: 'form-control' } %>
        </p>

        <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= link_to t('back'), admin_tests_path %>

  </div>
</div>
