<%= test_header(test) %>

<%= render 'shared/errors', resource: test %>

<%= form_with model: test, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br>

  <%= form.label :category_id %>
  <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %><br>
  <%= form.label :author_id %>
  <%= form.collection_select :author_id, User.all, :id, :login, prompt: true %><br>

  <%= form.submit %>
<% end %>

